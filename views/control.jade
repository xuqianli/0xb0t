extends layout
block content
  script(type='text/javascript', src='/javascripts/gyroMode.js')
  script(type='text/javascript', src='/javascripts/gps.js')
  section  
    table
      tr 
        td Distance 1:  
        td(id = "distance1") 1
        td.mobile Alpha
        td.mobile(id = "alpha") alpha
        td.mobile(id = "alphaLock") aLock          
      tr
        td Distance 2: 
        td(id = "distance2") 2
        td.mobile Beta
        td.mobile(id = "beta") beta
        td.mobile(id = "betaLock") bLock        
      tr
        td Distance 3: 
        td(id = "distance3") 3
        td.mobile Gamma
        td.mobile(id = "gamma") gamma
        td.mobile(id = "gammaLock") gLock     
    div.mobileModes
      button.mobile(id = "gyroMode") Gyroscope Mode 
      //button.mobile(id = "touchMode") touchMode
    div.streamBox
      image(src='http://192.168.0.180:8554/stream/video.mjpeg').mjpeg
    div.controlWrap
      div.topWrap
        button(id = "up", data-inline="true", data-theme="b") w
      button(id = "left", data-inline="true", data-theme="b") a
      button(id = "down", data-inline="true", data-theme="b") s
      button(id = "right", data-inline="true", data-theme="b") d
    button.mobile(id = "stop") STOP
    button(id = "gps") GPS
